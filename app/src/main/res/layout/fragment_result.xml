<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试结果查看"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 文件信息 -->
    <TextView
        android:id="@+id/tvFileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件: 未加载"
        android:textSize="12sp"
        android:textColor="@color/material_blue_500"
        android:layout_marginBottom="8dp" />

    <!-- 统计信息 -->
    <TextView
        android:id="@+id/tvStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="统计: 无数据"
        android:textSize="12sp"
        android:textColor="@color/material_blue_500"
        android:layout_marginBottom="16dp" />

    <!-- 过滤设置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最大延迟(ms):"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/etMaxDelay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:text="200"
            android:maxLines="1"
            android:background="@android:drawable/edit_text"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnLoadResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新加载"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnCopyAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全复制"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCheckAllIPResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证所有IP"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试结果列表 (点击IP复制)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击上方按钮加载测试结果"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>